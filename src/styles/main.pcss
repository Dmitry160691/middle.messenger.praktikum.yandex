:root {
  --primary-color: #0b93f6;
  --secondary-color: #e5e5ea;
  --background-color: black;
  --page-background: white;
  --text-color: black;
}

::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-thumb {
  background-color: var(--secondary-color);
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
  background-color: rgb(255 255 255 / 70%);
  background-image: linear-gradient(to bottom, #d3d3ff, #f5f5ff);
}

::-webkit-scrollbar-track {
  background-color: rgb(0 0 0 / 5%);
  border-radius: 5px;
}

::-webkit-scrollbar-corner {
  background-color: transparent; /* Прозрачность угла */
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  background-color: var(--background-color);
  font-family: Arial, sans-serif;
  line-height: 24px;
}

hr {
  background: var(--secondary-color);
  border: none;
  height: 1px;
}

.input[type='file'] {
  display: none;
}

header {
  align-items: center;
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin: auto;
  padding: 20px;
}

footer {
  align-items: center;
  display: flex;
  flex-direction: column;
  margin: 20px auto;
}

.app {
  color: var(--text-color);
  height: 100vh;
  margin: auto;
  padding: 10px;
  width: 80vw;
}

h1,
h2,
h3 {
  color: var(--secondary-color);
}

.input,
.button {
  border-radius: 10px;
  box-sizing: border-box;
  margin: 10px 0;
  padding: 10px;
}

.input {
  border: 1px solid #bdbdbd;
  width: 100%;

  &:focus {
    border-color: #bdbdbd;
    box-shadow: 0 0 0 0.2rem rgb(158 158 158 / 25%);
    outline: 0;
  }
}

.button {
  background-color: var(--primary-color);
  border: none;
  color: white;
  cursor: pointer;
  transition: background-color 0.3s ease;
  width: 150px;

  &:hover {
    background-color: color-mix(in srgb, var(--primary-color) 80%, black);
  }

  &:disabled {
    background-color: #bdc3c7;
    cursor: not-allowed;
  }
}

.button-second {
  background-color: transparent;
  border: none;
  color: var(--primary-color); /* Замените на нужный синий цвет */
  cursor: pointer;
  padding: 10px 5px;
  text-align: center;
  transition: color 0.3s ease;
  width: auto; /* Кнопка будет растягиваться по ширине текста */

  &:hover {
    color: var(--secondary-color); /* Замените на нужный серый цвет */
  }

  &:active {
    transform: scale(0.98);
  }

  &:focus {
    outline: none;
  }
}

.auth-container,
.sign-in-container,
.profile-container {
  background-color: var(--page-background);
  border-radius: 10px;
  margin: auto;
  padding: 20px 40px;
  width: 400px;
}

.profile-container {
  width: 800px;
}

.contact-list-header {
  align-items: center;
  display: flex;
  height: 60px;
  justify-content: space-between;
  padding: 10px;
}

.logo-container {
  display: flex;
  gap: 5px;
}

.logo-star,
.logo-setting {
  height: 20px;
  width: 20px;
  cursor: pointer;
}

.logo-star {
  background: no-repeat center center / contain url('../assets/red-star.svg');
}

.logo-setting {
  background: no-repeat center center / contain url('../assets/cogwheel.svg');
}

.messages-container {
  display: flex;
  gap: 10px;
  height: 100%;
}

.contact-list,
.messages-list {
  background-color: var(--page-background);
  border-radius: 10px;
  min-width: 400px;
  padding: 10px;
}

.messages-list {
  display: block;
  flex-grow: 1;
  position: relative;
}

.contact-container {
  display: flex;
  gap: 10px;
  height: 80px;
  padding: 10px;
}

.contact-avatar {
  background: var(--secondary-color);
  border-radius: 50%;
  height: 60px;
  width: 60px;
}
.avatar {
  width: 130px;
  height: 130px;
  cursor: pointer;
  border-radius: 180px;
}

.contact-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.contact-text {
  display: flex;
}

.contact {
  flex-grow: 1;
}

.messages-list-dialog {
  display: flex;
  flex-direction: column;
  align-items: end;
  gap: 5px;
  padding: 20px;
  overflow-y: scroll;
  height: 83.5vh;
}

.contacts {
  overflow-y: scroll;
  height: 84vh;
}

.send,
.receive {
  border-radius: 10px;
  max-width: 50%;
  padding: 10px 20px;
  position: relative;
}

.send {
  align-self: flex-end;
  background: var(--primary-color);
  color: white;
}

.receive {
  align-self: flex-start;
  background: var(--secondary-color);
  color: var(--text-color);
}

.messages-list-footer {
  bottom: 0;
  display: flex;
  gap: 10px;
  position: absolute;
}

.messages-list-header {
  align-items: center;
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

.field-edit,
.field-profile {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
}

.helper-message {
  color: red;
  font-size: 12px;
}

.contact-selected {
  border-radius: 10px;
  background-color: var(--primary-color);
}

.modal-container {
  position: absolute;
  width: 400px;
  height: 150px;
  top: 0;
  border-radius: 20px;
  background-color: rgb(255 255 255 / 70%); /* Полупрозрачный белый цвет */
  background-image: linear-gradient(to right bottom, #d3d3ff, #f5f5ff);
  padding: 10px;
  display: flex;
  flex-direction: column;
  text-align: center;
}
