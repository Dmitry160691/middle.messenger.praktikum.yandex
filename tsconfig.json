{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["src", "declarations.d.ts"],
  "plugins": ["@typescript-eslint"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  }
}
